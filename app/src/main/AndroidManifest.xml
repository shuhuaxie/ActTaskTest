<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.taskandactivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="singleTask Act"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:taskAffinity=".t123"
            android:label="normal Act" />
        <activity
            android:name=".Test2Activity"
            android:label="singleTop Act"
            android:launchMode="singleTop" />
        <activity
            android:name=".Test3Activity"
            android:label="singleInstance Act"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Test4Activity"
            android:label="normal Act" />
        <activity
            android:name=".Test5Activity"
            android:label="normal Act for clear Top" />
    </application>

</manifest>