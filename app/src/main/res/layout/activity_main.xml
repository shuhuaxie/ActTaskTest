<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_margin="10dp"
                android:id="@+id/two_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaaaaa"
                android:text="1。连续打开2个普通Activity，可以逐个返回。"
                />
            <Button
                android:layout_margin="10dp"
                android:id="@+id/start_myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaaaaa"
                android:text="2。打开自己只会调用OnNewIntent"
                />
            <Button
                android:layout_margin="10dp"
                android:id="@+id/start_single_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#aaaaaa"
                android:text="3。打开SingleTop Act"
                />
            <Button
                android:layout_margin="10dp"
                android:id="@+id/intent_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="intent_msg"
                />
        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>